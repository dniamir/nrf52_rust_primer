{
  "version": "2.0.0",

  "tasks": [

    // Task for loading BLE memory config using SoftDevice
    {
      "label": "Ensure SoftDevice (nRF52)",
      "type": "shell",
      "command": "${workspaceFolder}/system_fw/flash_device.sh",
      "args": ["--ble-program-nrf52"]
    },

    // Build for nRF52 Blinky
    {
      "label": "Build blinky (nRF52)",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--bin",
        "blinky",
        "--target",
        "thumbv7em-none-eabihf"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },

    // Build for STM32 Blinky
    {
      "label": "Build blinky (STM32)",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--bin",
        "blinky",
        "--target",
        "thumbv7em-none-eabihf",
        "--no-default-features",
        "--features",
        "stm32"
      ],
      "group": "build"
    },

        // Build for nRF52 I2C Scanner
    {
      "label": "Build i2c_scan (nRF52)",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--bin",
        "i2c_scan",
        "--target",
        "thumbv7em-none-eabihf"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },

    // Build for nRF52 Chip Reader
    {
      "label": "Build chip_read (nRF52)",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--bin",
        "chip_read",
        "--target",
        "thumbv7em-none-eabihf"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },

    // Build for nRF52 BME680 chip reader
    {
      "label": "Build bme680_read (nRF52)",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--bin",
        "bme680_read",
        "--target",
        "thumbv7em-none-eabihf"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },

    // Build for nRF52840 BLE advertise
    {
      "label": "Build basic_ble_advertise (nRF52)",
      "type": "shell",
      "command": "cargo",
      "dependsOn": ["Ensure SoftDevice (nRF52)"],
      "args": [
        "build",
        "--bin",
        "basic_ble_advertise",
        "--target",
        "thumbv7em-none-eabihf",
        "--features",
        "ble_memory",
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },

    // Build for nRF52840 BLE characteristic
    {
      "label": "Build ble_char (nRF52)",
      "type": "shell",
      "command": "cargo",
      "dependsOn": ["Ensure SoftDevice (nRF52)"],
      "args": [
        "build",
        "--bin",
        "ble_char",
        "--target",
        "thumbv7em-none-eabihf",
        "--features",
        "ble_memory",
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },

  ]
}