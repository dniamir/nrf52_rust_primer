{
  "version": "2.0.0",

  "tasks": [

    // Build for nRF52 Blinky
    {
      "label": "Build blinky (nRF52)",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--bin",
        "blinky",
        "--target",
        "thumbv7em-none-eabihf"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },

    // Build for STM32 Blinky
    {
      "label": "Build blinky (STM32)",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--bin",
        "blinky",
        "--target",
        "thumbv7em-none-eabihf",
        "--no-default-features",
        "--features",
        "stm32"
      ],
      "group": "build"
    },

        // Build for nRF52 I2C Scanner
    {
      "label": "Build i2c_scan (nRF52)",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--bin",
        "i2c_scan",
        "--target",
        "thumbv7em-none-eabihf"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },

    // Build for nRF52 Chip Reader
    {
      "label": "Build chip_read (nRF52)",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--bin",
        "chip_read",
        "--target",
        "thumbv7em-none-eabihf"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },

    // Build for nRF52 BME680 chip reader
    {
      "label": "Build bme680_read (nRF52)",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--bin",
        "bme680_read",
        "--target",
        "thumbv7em-none-eabihf"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },

  ]
}